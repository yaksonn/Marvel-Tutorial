<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelTutorial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary500</item>
        <item name="colorPrimaryVariant">@color/primary700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary200</item>
        <item name="colorSecondaryVariant">@color/primary200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.MarvelTutorial.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="App.ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Theme.PopupOverlay.Menu" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="TextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/heebo_regular</item>
        <item name="android:fontFamily">@font/heebo_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Bold">
        <item name="fontFamily">@font/heebo_bold</item>
        <item name="android:fontFamily">@font/heebo_bold</item>
    </style>

    <style name="TextStyle.SemiBold">
        <item name="fontFamily">@font/heebo_semibold</item>
        <item name="android:fontFamily">@font/heebo_semibold</item>
    </style>

    <style name="TextStyle.Body14" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">22dp</item>
    </style>

    <style name="TextStyle.Body12" parent="TextStyle">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">22dp</item>
    </style>

    <style name="TextStyle.SemiBold.12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextStyle.SemiBold.14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Theme.MarvelTutorial.ProgressbarStyle">
        <item name="android:indeterminateTint">@color/primary200</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>